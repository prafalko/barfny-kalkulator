---
import '../styles/global.css';
import { Image } from 'astro:assets';
import banner from '../assets/banner.png';
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/dog-calculator-icon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Barfny kalkulator</title>
	</head>
	<body>
		<div class="banner-container">
			<Image src={banner} alt="Barfny kalkulator - welcome banner" loading="eager" fetchpriority="high" sizes="100vw" />
		</div>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	.banner-container {
		display: flex;
		justify-content: center;
		width: 100%;
	}

	.banner-container img,
	.banner-container picture {
		max-width: 100%;
		height: auto;
	}
</style>
